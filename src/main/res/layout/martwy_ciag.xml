<!-- Plik: marwty_ciag.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoGYM"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/exerciseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARTWY CIĄG"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/infoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wprowadź dane treningowe"
        android:textSize="11sp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/aktualnyCiezarField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AKTUALNY CIĘŻAR"
        android:inputType="numberDecimal"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/iloscPowtorzenField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ILOŚĆ POWTÓRZEŃ"
        android:inputType="number"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/numerSeriiLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUMER SERII: 1\nAKTUALNA OBJĘTOŚĆ TRENINGOWA: 0"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/cwiczeDalejButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ĆWICZĘ DALEJ"
            android:onClick="MartwyCiag"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/zmieniamCwiczenieButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ZMIENIAM ĆWICZENIE"
            android:onClick="pRozpocznijTrening"/>
    </LinearLayout>
</LinearLayout>
